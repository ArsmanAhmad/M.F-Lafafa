@Scripts.Render("~/Scripts/jquery-1.8.2")
@Scripts.Render("~/bundles/jquery")
<script>

    $(document).ready(function () {
        $('#checking').hide();
        $('#submitBtn').attr('disabled', 'disabled');
        //$('#b1').click(function ()

        $('#orderNo').focusout(function () {

            var checkOrderNo = $('#orderNo').val();

            // alert('User Name ='+ userName);
            $('#checking').show();

            $.getJSON("/Home/ValidateOrderNo?checkOrderNo=" + checkOrderNo, function (data) {
                $('#checking').hide();
                if (data) {
                    $('#submitBtn').attr('disabled', 'disabled');
                    $('#result').text("*ERROR!! (Order Number Not Unique)");

                }
                else {
                    $('#result').text("");
                    $('#submitBtn').removeAttr('disabled');
                }

            });

        });

    });
</script>
